<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/window_background</item>

        <item name="buttonStyle">@style/AppTheme.Button.Borderless</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/activity_splash_background</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@drawable/button_colored_background</item>
    </style>

    <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@drawable/button_borderless_background</item>
    </style>

    <style name="AppTheme.Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:background">@drawable/button_borderless_colored_background</item>
    </style>

    <style name="AppTheme.Button.Bordered" parent="AppTheme.Button.Borderless">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@drawable/button_bordered_background</item>
    </style>

    <style name="AppTheme.Button.Bordered.Colored" parent="AppTheme.Button.Colored">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:background">@drawable/button_bordered_colored_background</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/transparent</item>
        <item name="itemIconTint">@color/bnv_item_color</item>
        <item name="itemTextColor">@color/bnv_item_color</item>
        <item name="colorControlHighlight">@color/secondary_light</item>
    </style>
</resources>
