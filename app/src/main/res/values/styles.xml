<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:colorBackground">@color/primary_light</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/text_secondary_inverse</item>
        <item name="android:windowBackground">@drawable/window_background</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorControlHighlight">?android:attr/colorAccent</item>

        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="buttonStyle">@style/AppTheme.Button.Borderless</item>
        <item name="cardViewStyle">@style/AppTheme.CardView</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <!--TODO: swipeRefreshLayout style-->
    </style>

    <style name="AppTheme.WithActionBar" parent="AppTheme">
        <item name="android:statusBarColor">?android:attr/colorPrimaryDark</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/activity_splash_background</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/AppTheme.Toolbar.Subtitle</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">?android:attr/textColorSecondary</item>
        <item name="tabSelectedTextColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.TabLayout.Colored" parent="AppTheme.TabLayout">
        <item name="android:background">?android:attr/colorPrimary</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/transparent</item>
        <item name="itemIconTint">@color/bnv_item_color</item>
        <item name="itemTextColor">@color/bnv_item_color</item>
    </style>

    <!--TODO: set background color-->
    <style name="AppTheme.BottomNavigationView.Colored" parent="AppTheme.BottomNavigationView" />

    <style name="AppTheme.Text" />

    <style name="AppTheme.Text.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.Text.Colored" parent="AppTheme.Text">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Colored.SingleLine" parent="AppTheme.Text.SingleLine">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Headline" parent="AppTheme.Text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="AppTheme.Text.Headline.SingleLine" parent="AppTheme.Text.SingleLine">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="AppTheme.Text.Headline.Colored" parent="AppTheme.Text.Headline">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Headline.Colored.SingleLine" parent="AppTheme.Text.Headline.SingleLine">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Subhead" parent="AppTheme.Text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="AppTheme.Text.Subhead.SingleLine" parent="AppTheme.Text.SingleLine">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="AppTheme.Text.Subhead.Colored" parent="AppTheme.Text.Subhead">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Subhead.Colored.SingleLine" parent="AppTheme.Text.Subhead.SingleLine">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Title" parent="AppTheme.Text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.Text.Title.SingleLine" parent="AppTheme.Text.SingleLine">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.Text.Title.Colored" parent="AppTheme.Text.Title">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Title.Colored.SingleLine" parent="AppTheme.Text.Title.SingleLine">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Caption" parent="AppTheme.Text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="AppTheme.Text.Caption.SingleLine" parent="AppTheme.Text.SingleLine">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="AppTheme.Text.Caption.Colored" parent="AppTheme.Text.Caption">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Caption.Colored.SingleLine" parent="AppTheme.Text.Caption.SingleLine">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_colored_background</item>
    </style>

    <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless" />

    <style name="AppTheme.Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored" />

    <style name="AppTheme.Button.Bordered" parent="AppTheme.Button.Borderless">
        <item name="android:background">@drawable/button_bordered_background</item>
    </style>

    <style name="AppTheme.Button.Bordered.Colored" parent="AppTheme.Button.Borderless.Colored">
        <item name="android:background">@drawable/button_bordered_colored_background</item>
    </style>

    <style name="AppTheme.CardView" parent="@style/CardView">
        <item name="cardBackgroundColor">?android:attr/colorBackground</item>
    </style>

    <style name="AppTheme.CardView.Clickable" parent="@style/AppTheme.CardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.ListItem">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="AppTheme.ListItem.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
